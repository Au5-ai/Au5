{
  "manifest_version": 3,
  "name": "Au5.ai",
  "version": "1.0",
  "description": "Adds real-time speech recognition to Google Meet",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://meet.google.com/*"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["dist/content.js"],
      "css": ["src/ui/styles.css"]
    }
  ],
  "action": {
    "default_popup": "src/ui/template.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
